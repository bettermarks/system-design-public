/' include of C4 libaries '/
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

/' Persons '/
/' Predefined Persons to be used in other PlantUMLs '/
/' teacher(,) '/
/' student(,) '/
/' support(,) '/

!unquoted procedure teacher($teacher_alias)
Person_Ext($teacher_alias, "Teacher", "A teacher using the adaptive learning system.")
!endprocedure
!unquoted procedure student($student_alias)
Person_Ext($student_alias, "Student", "A student using the adaptive learning system.")
!endprocedure
!unquoted procedure support($support_alias)
Person($support_alias, "Service & Support", "A internal role supporting our users and customers.")
!endprocedure


